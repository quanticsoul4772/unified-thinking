# Semantic Embeddings Configuration
# Copy this file to .env and update with your actual values

# Enable embeddings feature (default: false)
EMBEDDINGS_ENABLED=true

# Embedding provider (voyage for Voyage AI)
EMBEDDINGS_PROVIDER=voyage

# Model to use (voyage-3-lite is balanced, voyage-3-large for best quality)
EMBEDDINGS_MODEL=voyage-3-lite

# Your Voyage AI API key
VOYAGE_API_KEY=your-voyage-api-key-here

# Enable hybrid search with RRF (recommended)
EMBEDDINGS_HYBRID_SEARCH=true

# RRF parameter (default: 60, industry standard)
EMBEDDINGS_RRF_K=60

# Minimum similarity threshold for vector search (0.0 to 1.0)
EMBEDDINGS_MIN_SIMILARITY=0.5

# Enable embedding caching (recommended)
EMBEDDINGS_CACHE_ENABLED=true

# Cache TTL (how long to cache embeddings)
EMBEDDINGS_CACHE_TTL=24h

# Batch size for embedding requests
EMBEDDINGS_BATCH_SIZE=100

# Maximum concurrent API calls
EMBEDDINGS_MAX_CONCURRENT=5

# API call timeout
EMBEDDINGS_TIMEOUT=30s

# Other existing configuration
DEBUG=false
STORAGE_TYPE=sqlite
SQLITE_PATH=./data/unified-thinking.db
STORAGE_FALLBACK=memory